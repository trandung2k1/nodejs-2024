{
    "compilerOptions": {
        "module": "commonjs",
        "esModuleInterop": true,
        "target": "es6",
        "moduleResolution": "node",
        "sourceMap": true,
        "baseUrl": "./src",
        "paths": {
            "@utils/*": ["./utils/*"],
            "@controllers/*": ["./controllers/*"],
            "@routes/*": ["./routes/*"]
        },
        "allowSyntheticDefaultImports": true
    },
    "lib": ["es2015"],
    "exclude": ["node_modules", "build"],
    "include": ["src/**/*.js", "src/index.jsx.js"]
}
